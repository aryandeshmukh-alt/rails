<%= form_with model: blog, local: true do |form| %>
  <% if blog.errors.any? %>
    <div class="alert">
      <h3><%= pluralize(blog.errors.count, "error") %> prevented saving:</h3>
      <ul>
        <% blog.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, placeholder: "Enter blog title" %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body,
          rows: 8,
          placeholder: "Write your blog content here..." %>
  </div>

  <div class="form-actions">
    <%= form.submit "Save Blog" %>
  </div>
<% end %>
