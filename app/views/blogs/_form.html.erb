<div class="form-card">
  <%= form_with(model: blog) do |form| %>
    <% if blog.errors.any? %>
      <div class="alert">
        <h4><%= pluralize(blog.errors.count, "error") %> prevented saving:</h4>
        <ul>
          <% blog.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, placeholder: "Enter blog title" %>
    </div>

    <div class="form-group">
      <%= form.label :body %>
      <%= form.text_area :body, rows: 6, placeholder: "Write your blog content..." %>
    </div>

    <div class="form-actions">
      <%= form.submit "Save Blog" %>
      <%= link_to "Back", blogs_path, class: "secondary-link" %>
    </div>
  <% end %>
</div>
