<div class="blog-card">
  <!-- HEADER -->
  <div class="blog-card-header">
    <h2 class="blog-title"><%= blog.title %></h2>

    <span class="blog-status <%= blog.published ? 'published' : 'draft' %>">
      <%= blog.published ? "Published" : "Draft" %>
    </span>
  </div>

  <!-- BODY -->
  <div class="blog-card-body">
    <p>
      <%= truncate(blog.body, length: 260) %>
    </p>
  </div>

  <!-- FOOTER -->
  <div class="blog-card-footer">
    <% if blog.published %>
      <div class="likes-area">
        <%= button_to "â¤ï¸ Like",
              like_blog_path(blog),
              method: :post,
              form: { data: { turbo_stream: true } },
              class: "like-btn" %>

        <span class="likes-count">
          <%= blog.likes_count %> likes
        </span>
      </div>
    <% end %>

    <% unless blog.published %>
      <%= button_to "Publish",
            publish_blog_path(blog),
            method: :patch,
            data: { turbo: false },
            class: "publish-btn" %>
    <% end %>
  </div>

  <!-- ACTION LINKS -->
  <div class="blog-actions">
    <%= link_to "Show", blog %>
    <%= link_to "Edit", edit_blog_path(blog) %>

    <%= button_to "Delete",
          blog_path(blog),
          method: :delete,
          data: { turbo_confirm: "Are you sure?" },
          class: "delete-btn" %>
  </div>
</div>
