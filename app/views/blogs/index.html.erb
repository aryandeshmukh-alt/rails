<h1>Blogs</h1>

<%= form_with url: blogs_path, method: :get, local: true do %>
  <%= label_tag :search, "Search by title:" %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search" %>
<% end %>

<br>

<%= link_to "New Blog", new_blog_path %>

<hr>

<%= render @blogs %>

<% if @blogs.empty? %>
  <p><em>No blogs found.</em></p>
<% end %>

<hr>

<div>
  <% if @current_page > 1 %>
    <%= link_to "Previous", blogs_path(page: @current_page - 1, search: params[:search]) %>
  <% end %>

  <%= link_to "Next", blogs_path(page: @current_page + 1, search: params[:search]) %>
</div>
